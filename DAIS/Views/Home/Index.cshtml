@{
    Layout = null;
}
@using DAIS.ViewModels
@model UserListViewModel
<!DOCTYPE html>

<html>
<head>
    <style>
        div {
            margin-left:40%;
            margin-top:15%;
        }
        table {
            border-radius:15px;
            border:1px solid black;
        }
        td {
            text-align:center;
            padding:10px 10px 7px 2px;
        }
        th {
            font-size:20px;
        }
    </style>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <table>
            <tr><td>
        Hello @ViewData["username"]
                </td>
                <td>
        <a href="/Authentication/Logout">Logout</a>
            </td></tr>       
            <form id="userForm" action="/User/Index" method="post">          
        @{foreach (UserViewModel user in Model.Users)
        {
             <tr>                 
                <td>@user.Username</td>
                <td>@user.Birthdate</td>
                 
                 <td><input type="submit" name="submit" value="@user.UserID"  /></td>
            </tr>   
        }
        }
            </form>
        </table>
    </div>
</body>
</html>
